function showFlashTVC(){  
	if((navigator.userAgent.indexOf('iPhone') != -1)||(navigator.userAgent.indexOf('iPod') != -1)||(navigator.userAgent.indexOf('iPad') != -1))
		{
			if((navigator.userAgent.indexOf('5.0 Mobile') != -1)||(navigator.userAgent.indexOf('5.0.1 Mobile') != -1)||(navigator.userAgent.indexOf('5.0.2 Mobile') != -1)||(navigator.userAgent.indexOf('5.0.3 Mobile') != -1)||(navigator.userAgent.indexOf('5.0.4 Mobile') != -1)||(navigator.userAgent.indexOf('5.0.5 Mobile') != -1)||(navigator.userAgent.indexOf('4.0 Mobile') != -1)||(navigator.userAgent.indexOf('4.0.1 Mobile') != -1)||(navigator.userAgent.indexOf('4.0.2 Mobile') != -1)||(navigator.userAgent.indexOf('4.0.3 Mobile') != -1)||(navigator.userAgent.indexOf('4.0.4 Mobile') != -1)||(navigator.userAgent.indexOf('4.0.5 Mobile') != -1)||(navigator.userAgent.indexOf('4.1 Mobile') != -1))
			{
				$('.toolbar').css('position','absolute');
				}
		}
	else{
		this.getVideo = function(){
				var htmlFCode = '<div id="flashContant"><div id="objectDiv">'
				htmlFCode += '<object id="FlashID" classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" width="290" height="218">'
				htmlFCode += '<param name="movie" value="swf/index_tvc.swf" />'
				htmlFCode += '<param name="quality" value="high" />'
				htmlFCode += '<param name="wmode" value="transparent" />'
				htmlFCode += '<!-- 此 param 标签提示使用 Flash Player 6.0 r65 和更高版本的用户下载最新版本的 Flash Player。如果您不想让用户看到该提示，请将其删除。 -->'
				htmlFCode += '<param name="expressinstall" value="Scripts/expressInstall.swf" />'
				htmlFCode += '<!-- 下一个对象标签用于非 IE 浏览器。所以使用 IECC 将其从 IE 隐藏。 -->'
				htmlFCode += '<!--[if !IE]>-->'
				htmlFCode += '<object type="application/x-shockwave-flash" data="swf/index_tvc.swf" width="290" height="218">'
				htmlFCode += '<!--<![endif]-->'
				htmlFCode += '<param name="quality" value="high" />'
				htmlFCode += '<param name="wmode" value="transparent" />'
				htmlFCode += '<param name="expressinstall" value="Scripts/expressInstall.swf" />'
				htmlFCode += '<!-- 浏览器将以下替代内容显示给使用 Flash Player 6.0 和更低版本的用户。 -->'
				htmlFCode += '<div><h4>此页面上的内容需要较新版本的 Adobe Flash Player。</h4><p><a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="获取 Adobe Flash Player" width="112" height="33" /></a></p></div>'
				htmlFCode += '<!--[if !IE]>--></object><!--<![endif]--></object>'
				htmlFCode += '<a href="javascript:;" class="closeTvc"><img src="images/btn/closeTvc.png" /></a>'
				htmlFCode += '</div></div>'
				return htmlFCode;
				}
			  var vhtml=this.getVideo();
			  $('#flashContant').html(vhtml);
			  setTimeout("$('#flashContant').show();",200);
			  
		$('a.closeTvc').click(function(){
			$('#objectDiv').remove();
			$('#flashContant').hide();
			setTimeout("$('.flashBtn').show();",200);
		});
	}
};

