} 

function scrollPic(){
//============首页KV=================================		
	  var currentSlide=0;
	  var oldSlide=0;
	  var slideCount=$('.slideList li').length;
	  var slideWidth=$('.slideList li').innerWidth();
	  $('.slideList').css('width',slideWidth*slideCount);
	  $('.slideList img').css('border','none');
	  $('a.slideNum').eq(0).addClass('current');
	  var slideTimeout;
	  
	  var slideRotation = function(){
		  oldSlide=currentSlide;
		  currentSlide=(currentSlide+1)%slideCount;
		  if(navigator.appVersion.match(/7./i)=='7.'){
			  $('.slideList').css('left',-slideWidth*currentSlide);
			  }
			  else{
				  $('.slideList').hide();
				  $('.slideList').css('left',-slideWidth*currentSlide);
				  $('.slideList').fadeIn();
				  }
		  $('a.slideNum').eq(oldSlide).removeClass('current');
		  $('a.slideNum').eq(currentSlide).addClass('current');
		  slideTimeout=setTimeout(slideRotation,5000);		
		  };
		  
	  slideTimeout=setTimeout(slideRotation,5000);//启动轮转程序	

//鼠标悬停
	  $('.slideFrame').hover(
		  function(){clearTimeout(slideTimeout);},//鼠标悬停时停止轮转
		  function(){slideTimeout=setTimeout(slideRotation,5000);}//鼠标移开后重新开始轮转程序		
		  );

//鼠标点击 
	  $('.slideController li').click(
		  function(){
			  clearTimeout(slideTimeout);
			  $('a.slideNum').removeClass('current');//取消所有标有当前标记的控制数
			  $(this).children().addClass('current');//添加当前标记给控制数
			  var c_num=$('.slideController li').index(this);
			  currentSlide=parseInt(c_num);
			  oldSlide=currentSlide;
			  $('.slideList').css('left',-slideWidth*currentSlide);
			  }
	  );	
//========end 首页kv========
}

/*下载显示*/
var curdname = "dsgg";
var scrollSetting = false;
var pageCount = 0;
var d = "dsgg";
var t = 2;
var pageNum = 1;
var $body = $("#downlist_" + d);
function downshow(dname, typeid) {
    scrollSetting = false;
    pageNum = 1;
    t = typeid;
    d = dname;
    $("#downlist_dsgg").html("");
    $("#downlist_zmbz").html("");
    $("#downlist_dzhk").html("");
    $body = $("#downlist_" + d);
    $body.height=0;
    if (typeid == "1") { pageCount = 12 }
    else { pageCount = 5 }

    $("#left_btm").removeClass(curdname);
    $("#left_btm").addClass(dname);
    $("#downlist_" + curdname).hide('slow');
    $("#downview_" + curdname).show('slow');
    $("#downlist_" + dname).show('slow');
    $("#downview_" + dname).hide('slow');
    curdname = dname;
    insertcode(1, t, d);

    $(window).scroll(function () {
        $body = $("#downlist_" + d);
        setTimeout(function () {
            var scr = window.innerHeight || $(window).height();
            /*判断窗体高度与竖向滚动位移大小相加 是否 超过内容页高度*/
            if ($(window).scrollTop() + scr >= $body.height()) {
                if (scrollSetting) {
                    scrollSetting = false;
                    if (pageNum <= pageCount) {
                        pageNum++;
                        insertcode(pageNum, t, d);
                    }
                }
            }
        }, 1000);
    });
}
function insertcode(pageNum, dtype, dname) {
    var $body = $("#downlist_" + dname);
    $.ajax({
        method: 'post',
        url: webUrl + 'ashx/GetDownLoad.ashx',
        data: { pageNum: pageNum, pageSize: 12, type: dtype },
        dataType: 'text',
        cache: false,
        success: function (data) {
            $body.append(data);
	    scrollSetting = true;
            //下载链接
            $(".downbox").mouseover(function () {
                $(this).find(".downhover").css("display", "block");
            }).mouseout(function () {
                $(this).find(".downhover").css("display", "none");
            });
            
        },
        error: function (errobj, status, msg) {
            alert(status + "\r\n" + msg);
        },
        ttt: ''
    });
    //$("#page_tag_load").hide();
}
//function endcode() {
//    $("#page_tag_load").hide();
//}



