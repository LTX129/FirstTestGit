var curkname = "kfccn";
function kshow(kname)
{
	$("#l_"+curkname).hide('slow');
	$("#r_"+curkname).show('slow');
	$("#l_"+kname).show('slow');
	$("#r_"+kname).hide('slow');
	curkname = kname;
}

/*企业责任*/
var curdutyname = "dutyabout";
function dutyshow(dutyname)
{
	$("#l_"+curdutyname).hide('slow');
	$("#r_"+curdutyname).show('slow');
	$("#l_"+dutyname).show('slow');
	$("#r_"+dutyname).hide('slow');
	curdutyname = dutyname;
	
	if(dutyname!="share")
		$("#t_tvc").html("");
}

function setSchoolinfo(sorder)
{
	switch(sorder)
	{
		case "1":
			$("#sbtn1").attr("src", "images/btn/1school_cur.gif");
			$("#sbtn2").attr("src", "images/btn/2school.gif");
			$("#sdcon1").show();
			$("#sdcon2").hide();
			break;
		case "2":
			$("#sbtn1").attr("src", "images/btn/1school.gif");
			$("#sbtn2").attr("src", "images/btn/2school_cur.gif");
			$("#sdcon1").hide();
			$("#sdcon2").show();
			break;
	}
}

function setTvcinfo(sorder)
{
	var s1 = new SWFObject("swf/player.swf","ply","565","375","9","#FFFFFF");
	s1.addParam("wmode", "transparent");
	s1.addParam("allowfullscreen","true");
	s1.addParam("allowscriptaccess","always");
	s1.addParam("flashvars","file="+sorder+".flv");
	s1.write("t_tvc");
	
	$("#tsv5").show();
	$("#tsv1").show();
	$("#tsv2").show();
	$("#tsv3").show();
	$("#tsv4").show();
	
	$("#tsv"+sorder).hide();
	
	$(".t_tvctitle").html($("#tsv"+sorder).find(".s_tvc .s_tvc_title").html());
}

/*美食天地*/
var cursmenuimg = "";
$(document).ready(function(){
	$('.smenus ul li img').mouseover(function(){
		if($(this).attr("src").indexOf("b.")==-1)
			$(this).attr("src", $(this).attr("src").replace(".","b."));
	});
	
	$('.smenus ul li img').mouseout(function(){
		if($(this).attr("src").indexOf("b.")!=-1 && cursmenuimg != $(this).attr("src"))
			$(this).attr("src", $(this).attr("src").replace("b.","."));
	});
	
	$('.smenus ul li img').click(function(){
		var url = $(this).attr("url");
		if(url!=null && url!="")
		{
			window.open(url);
		}
		else
		{
			$('.smenus ul li img').each(function(){
				$(this).attr("src", $(this).attr("src").replace("b.","."));
			});
			$(this).attr("src", $(this).attr("src").replace(".","b."));
			cursmenuimg = $(this).attr("src");
			setbpicshow($(this).attr("folder"), $(this).attr("num"));
		}
	});
	
	$('.page_nums a').click(function(){
		$('.page_nums a').each(function(){
			$(this).removeClass("cur");
		});
		$(this).addClass("cur");
		$("#newfood").attr("class", $(this).attr("bgname"));
	});
	
	$('.page_nums2 a').click(function(){
		$('.page_nums2 a').each(function(){
			$(this).removeClass("cur");
		});
		$(this).addClass("cur");
		$("#threeearly").attr("class", $(this).attr("bgname"));
	});
	
	$(".arr_l,.arr_l_big").click(function(){
		var sleft = document.getElementById('bsmallpic').scrollLeft;
        console.log(sleft);
        var index=sleft/117;
         setActiveclass(index,"l");
       // $('#bsmallpic li').eq(index-1).addClass('active').siblings('li').removeClass('active');
		$('#bsmallpic').animate({scrollLeft:sleft-117+'px'});	
		setTimeout("set_arr()",1);
	});
	
	$(".arr_r,.arr_r_big").click(function(){
		var sleft = document.getElementById('bsmallpic').scrollLeft;
        var index=sleft/117;
        setActiveclass(index,"r");
        //console.log(sleft);
       // $('#bsmallpic li').eq(index+1).addClass('active').siblings('li').removeClass('active');
		$('#bsmallpic').animate({scrollLeft:sleft+117+'px'});
		setTimeout("set_arr()",1);
	});
});

//轮播点击事件
function setActiveclass(index,dir)
{
    var lis=$('#bsmallpic li');

    var currentIndex="";
    $(lis).each(function(i){
        if($(this).hasClass('active'))
        {
            currentIndex=i;
        }
    })

    console.log(currentIndex);
    
    if(currentIndex!="")
    {
            if(dir=="l")
            {
                $(lis).eq(currentIndex-1).addClass('active').siblings('li').removeClass('active'); 
            }
            else
            {
                $(lis).eq(currentIndex+1).addClass('active').siblings('li').removeClass('active'); 
            }
    }
    else
    { 
        if(dir=="l")
        {
            $(lis).eq(index-1).addClass('active').siblings('li').removeClass('active'); 
        }
        else
        {
            $(lis).eq(index+1).addClass('active').siblings('li').removeClass('active'); 
        }
    }
    var img=$('#bsmallpic li.active').find('img');
    setbpic(img);
}
//白皮书
function setbook(bclass, nums)
{
	var a_str = "";
	for(var i=1; i<=nums; i++)
	{
		a_str += "<a href=\"javascript:void(0)\""+(i==1 ? " class=\"cur\"" : "")+" bpic=\"images/book/"+bclass+"_"+i+".jpg\" onclick=\"setbookpic(this)\">"+i+"</a>";
	}
	$("#book").html('<img src="images/book/' + bclass + '_1.jpg" />');
	$(".page_nums3").html(a_str);
}

function setbookpic(obj)
{
	$("#book").html('<img src="'+$(obj).attr("bpic")+'" />');
	$('.page_nums3 a').each(function(){
		$(this).removeClass("cur");
	});
	$(obj).addClass("cur");
}

function set_arr()
{
	var sleft = document.getElementById('bsmallpic').scrollLeft;
	if(sleft==0)
    {
       $(".arr_l").hide();
       // $('.arr_l_big').hide(); 
    }
    else
    {
        $(".arr_l").show();
       // $('.arr_l_big').show();
    }

	var pnum = 0;
	$(".bsmallpiclist ul li img").each(function(){
		pnum++;
	});
	pnum = pnum-5;
	if(sleft==(pnum*117) || pnum<0)
	{
        $(".arr_r").hide();
        //$('.arr_r_big').hide();
    }
	else
    {
        $(".arr_r").show();
        //$('.arr_r_big').show();
    }
		
		
	//alert("|"+sleft+"|"+pnum*117+"|");
}

function showbflash(fname)
{
	if((navigator.userAgent.indexOf('iPhone') != -1)||(navigator.userAgent.indexOf('iPod') != -1)||(navigator.userAgent.indexOf('iPad') != -1))
	{
		$("#bswf").html("<img src='images/b_"+fname+".jpg' />");
	}
	else
	{
        var so = new SWFObject("swf/"+fname+".swf", "bswf", "958", "707", "10", "");
        so.addParam("wmode", "transparent");
        so.addParam("quality", "high");
        so.addParam("allowScriptAccess", "sameDomain");
        so.addParam("movie", "swf/"+fname+".swf");
        so.addParam("id", "bswf");
        so.write("bswf");	
	}
}

function setbpic(obj)
{
    $(obj).parent().addClass('active').siblings("li").removeClass('active');
	$(".bshowpic_box").html('<img src="'+$(obj).attr("bsrc")+'" />');	
}

function setbpicshow(folder, num)
{
	var pdiv_w = 117*num;
	var pichtml = '<div class="bsmallpiclist" style="width:'+pdiv_w+'px;">';
	pichtml += '<ul>';
	for(var i=1; i<=num; i++)
	{
    	pichtml += '<li><img src="images/jy/'+folder+'/thumb/'+i+'.jpg" bsrc="images/jy/'+folder+'/big/'+i+'.jpg" onclick="setbpic(this)" /></li>';
	}
    pichtml += '</ul>';
    pichtml += '</div>';
	
	$("#bsmallpic").html(pichtml);
	$(".bshowpic_box").html('<img src="images/jy/'+folder+'/big/1.jpg" />');
    $('.bsmallpiclist li').eq(0).addClass('active');
	$('#bsmallpic').animate({scrollLeft:'0px'});
	setTimeout("set_arr()",500);
}

//分页
function getPagelist(pagecount, curpage, objectid)
{
	var pagehtml = "";
	var cnum = 0;
	var bnum = 0;
	var onum = 0;
	if(curpage <= 0)
		curpage = 1;
	if(curpage >= pagecount)
		curpage = pagecount;
	
	if(curpage!=1)
		pagehtml += '<a href="javascript:void(0)" class="pre" onclick="setPage(' + pagecount + ',' + (curpage-1) + ',\'' + objectid + '\')">&nbsp;</a>';
	if(curpage<=4)
	{		
		for(var i=1;i<=4;i++)
		{
			pagehtml += '<a href="javascript:void(0)"' + (curpage == i ? ' class="cur"' : '') + ' onclick="setPage(' + pagecount + ',' + i + ',\'' + objectid + '\')">' + i + '</a>';
			cnum++;
			if(cnum>=pagecount)
				break;
		}
		if(pagecount>4)
		{
			if((pagecount-cnum)>1)
				pagehtml += "...";
			pagehtml += '<a href="javascript:void(0)" onclick="setPage(' + pagecount + ',' + pagecount + ',\'' + objectid + '\')">' + pagecount + '</a>';
		}
	}
	else
	{
		pagehtml += '<a href="javascript:void(0)"' + (curpage == i ? ' class="cur"' : '') + ' onclick="setPage(' + pagecount + ',1,\'' + objectid + '\')">1</a>';
		cnum++;
		bnum = curpage-1;
		onum = curpage+1;
		if(bnum <= cnum)
			bnum = cnum+1;
		if(onum > pagecount)
			onum = pagecount;
		if(bnum>2)
			pagehtml += "...";
		for(var i=bnum; i<=onum; i++)
		{
			pagehtml += '<a href="javascript:void(0)"' + (curpage == i ? ' class="cur"' : '') + ' onclick="setPage(' + pagecount + ',' + i + ',\'' + objectid + '\')">' + i + '</a>';
			cnum++;
		}
		if(pagecount>onum)
		{
			if((pagecount-onum)>1)
				pagehtml += "...";
			pagehtml += '<a href="javascript:void(0)" onclick="setPage(' + pagecount + ',' + pagecount + ',\'' + objectid + '\')">' + pagecount + '</a>';
		}
	}	
	if(curpage!=pagecount)
		pagehtml += '<a href="javascript:void(0)" class="next" onclick="setPage(' + pagecount + ',' + (curpage+1) + ',\'' + objectid + '\')">&nbsp;</a>';
	$("#"+objectid).html(pagehtml);
}

function setPage(pagecount, curpage, objectid)
{
	if(curpage <= 0)
		curpage = 1;
	if(curpage >= pagecount)
	    curpage = pagecount;
	$.ajax({
	    method: 'post',
	    url: webUrl+'ashx/GetNews.ashx',
	    data: { Current: curpage },
	    dataType: 'json',
	    cache: false,
	    success: function (data) {
	        var list = "<ul>";
	        for (var i = 0; i < data.dt.length; i++) {
	            if (data.dt[i]["IsBlank"] == "1") {
	                list += "<li class=\"cline1\"><a href=\"" + data.dt[i]["Link"] + "\" target=\"_blank\">" + data.dt[i]["Title"] + "</a></li>";
	            }
	            else {
	                list += "<li class=\"cline1\"><a href=\"javascript:getNews(" + data.dt[i]["NewsCenterID"] + ")\">" + data.dt[i]["Title"] + "</a></li>";
	            }
	        }
	        list += "</ul>";
	        $("#list").html(list);
	    },
	    error: function (errobj, status, msg) {
	        alert(status + "\r\n" + msg);
	    },
	    ttt: ''
	});
	//ajax动态加载新闻内容
	
	getPagelist(pagecount, curpage, objectid)
}


function getNews(id) {
    $("#title").html("");
    $("#info").html("");
    $.ajax({
        method: 'post',
        url: webUrl + 'ashx/GetNewsInfo.ashx',
        data: { id: id },
        dataType: 'json',
        cache: false,
        success: function (data) {
            var title = "";
            var info = "";
            var dtArr = data[0]["Addtime"].toString().split(".");
            var dt = dtArr[0] + "年" + dtArr[1] + "月";
            if (data.length > 0) {
                title += "<span>" + dt + "</span>" + data[0]["Title"].toString(); ;
                info += data[0]["Description"].toString();
            }
            $("#title").html(title);
            $("#info").html(info);
        },
        error: function (errobj, status, msg) {
            alert(status + "\r\n" + msg);
        },
        ttt: ''
    });
}

//收藏页面
function bookmarkit() {
    var fav_url = 'http://www.kfc.com.cn';
    var fav_title = '肯德基官网';
    if (document.all && window.external) {
        window.external.AddFavorite(fav_url, fav_title);
    } else if (window.sidebar) {
        window.sidebar.addPanel(fav_title, fav_url, "");
    } else {
        alert("浏览器不支持，请手动加入收藏夹");
    }
}

var winHeight = 0;
function changeToolbarTop()
{
     if (window.innerHeight)
	 {
		 winHeight = window.innerHeight;
	 }
     else if ((document.body) && (document.body.clientHeight))
	 {
		 winHeight = document.body.clientHeight;
	 }
     if (document.documentElement  && document.documentElement.clientHeight)
     {
     	winHeight = document.documentElement.clientHeight;
     }
	 function isIE6() {
		 return navigator.userAgent.split(";")[1].toLowerCase().indexOf("msie 6.0")=="-1"?false:true;   
		 }
	if(!isIE6()){
		if((navigator.userAgent.indexOf('iPhone') != -1)||(navigator.userAgent.indexOf('iPod') != -1)||(navigator.userAgent.indexOf('iPad') != -1)){}
		else{
			$('.toolbar').css('bottom','auto');
		 	$('.toolbar').css('top',winHeight-39);
			}
	}
}
window.onresize=changeToolbarTop;
